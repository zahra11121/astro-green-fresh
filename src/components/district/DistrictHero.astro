---
/**
 * DISTRICT HERO - ASTRO VERSION (SEO Optimized)
 * Perbaikan: Menghilangkan risiko "blank putih" dengan CSS Fallback & Robust Observer.
 */
import { MapPin, ArrowRight, ShieldCheck, Truck, Timer } from 'lucide-react';

const { district } = Astro.props;
const cityName = district?.name || 'Area';

const bgHeroImg = "https://images.unsplash.com/photo-1540420773420-3366772f4999?auto=format&fit=crop&q=80&w=2000";
const districtHeroImg = "https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&q=80&w=1200";
---

<section class="relative pt-20 pb-12 lg:pt-28 lg:pb-20 overflow-hidden font-sans border-b border-slate-100 bg-[#052c17] reveal-container">
  
  <div class="absolute inset-0 z-0">
    <img 
      src={bgHeroImg} 
      alt="Green Fresh Background" 
      class="w-full h-full object-cover opacity-10"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-[#052c17] via-[#052c17]/95 to-[#052c17]/90"></div>
  </div>

  <div class="max-w-[1800px] mx-auto px-6 lg:px-20 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      
      <div class="space-y-8 text-left order-2 lg:order-1 text-white">
        <div class="space-y-5">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-white/10 backdrop-blur-md border border-white/20 rounded-full reveal-left">
            <MapPin size={12} class="text-[#bef264]" />
            <span class="text-[9px] font-black text-white uppercase tracking-[0.2em]">
              {cityName} Distribution Hub
            </span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-serif italic font-black leading-[1.1] tracking-tighter uppercase reveal-up">
            SUPPLIER SAYUR <br />
            <span class="text-[#bef264] not-italic font-sans font-black">{cityName}.</span>
          </h1>

          <p class="text-lg lg:text-xl text-slate-300 font-medium leading-relaxed max-w-xl reveal-up" style="transition-delay: 0.1s;">
            Distribusi komoditas Grade A harian untuk standar dapur profesional dan operasional bisnis Horeka di wilayah <span class="text-[#bef264] font-bold">{cityName}</span>.
          </p>
        </div>

        <div class="flex flex-wrap gap-6 py-6 border-y border-white/10 reveal-up" style="transition-delay: 0.2s;">
          <div class="flex items-center gap-3">
            <Truck size={20} class="text-[#bef264]" />
            <div>
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest leading-none mb-1">Logistik</p>
              <p class="text-xs font-bold text-white uppercase">Pengiriman Harian</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <Timer size={20} class="text-[#bef264]" />
            <div>
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest leading-none mb-1">Waktu</p>
              <p class="text-xs font-bold text-white uppercase">Tiba Pagi Hari</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <ShieldCheck size={20} class="text-[#bef264]" />
            <div>
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest leading-none mb-1">Kualitas</p>
              <p class="text-xs font-bold text-white uppercase">Grade A Horeca</p>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 reveal-up" style="transition-delay: 0.3s;">
          <a href="#katalog" class="group inline-flex items-center justify-center gap-3 bg-[#bef264] text-[#052c17] px-8 py-4 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-white transition-all shadow-xl shadow-black/20">
            Katalog Harga
            <ArrowRight size={16} class="group-hover:translate-x-1 transition-transform" />
          </a>
          <a href="#partnership" class="inline-flex items-center justify-center bg-white/5 backdrop-blur-md text-white border-2 border-white/20 px-8 py-4 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-white hover:text-[#052c17] transition-all text-center">
            Ajukan Penawaran
          </a>
        </div>
      </div>

      <div class="order-1 lg:order-2">
        <div class="relative rounded-[2.5rem] lg:rounded-[3rem] overflow-hidden shadow-2xl aspect-[4/5] bg-white/5 border-4 border-white/10 backdrop-blur-sm max-w-lg mx-auto lg:ml-auto reveal-scale">
          <img 
            src={districtHeroImg} 
            alt={`Premium Supply CV Green Fresh Cipanas di ${cityName}`} 
            class="w-full h-full object-cover grayscale-[0.2] hover:grayscale-0 transition-all duration-700"
            loading="eager"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[#052c17]/60 via-transparent to-transparent"></div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* 1. STATE AWAL: Muncul secara default agar tidak blank */
  .reveal-up, .reveal-left, .reveal-scale {
    opacity: 1;
    transform: none;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* 2. STATE ANIMASI: Hanya sembunyikan jika Browser mendukung JS */
  @media (prefers-reduced-motion: no-preference) {
    :global(.js-enabled) .reveal-up { opacity: 0; transform: translateY(30px); }
    :global(.js-enabled) .reveal-left { opacity: 0; transform: translateX(-30px); }
    :global(.js-enabled) .reveal-scale { opacity: 0; transform: scale(0.95); }
  }

  /* 3. STATE AKTIF */
  :global(.is-visible) .reveal-up,
  :global(.is-visible) .reveal-left,
  :global(.is-visible).reveal-up,
  :global(.is-visible).reveal-left {
    opacity: 1 !important;
    transform: translate(0) !important;
  }
  :global(.is-visible) .reveal-scale,
  :global(.is-visible).reveal-scale {
    opacity: 1 !important;
    transform: scale(1) !important;
  }
</style>

<script>
  // Memberitahu CSS bahwa JS aktif
  document.documentElement.classList.add('js-enabled');

  const setupHeroAnimations = () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { 
      threshold: 0.05,
      rootMargin: '0px 0px -50px 0px' 
    });

    // Amati container utama DAN setiap elemen animasi secara spesifik
    document.querySelectorAll('.reveal-container, .reveal-up, .reveal-left, .reveal-scale').forEach(el => {
      observer.observe(el);
    });
  };

  // Jalankan segera dan dukung View Transitions
  setupHeroAnimations();
  document.addEventListener('astro:after-swap', setupHeroAnimations);
</script>