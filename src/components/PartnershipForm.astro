---
/**
 * PARTNERSHIP FORM - ASTRO VERSION (Mobile Optimized)
 */
import { 
  ShieldCheck, 
  CheckCircle2, 
  Send, 
  Lock, 
  Briefcase, 
  ChevronDown 
} from 'lucide-react';

const { id = "kemitraan" } = Astro.props;
const contactVisualUrl = "https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&q=80&w=1200";

const features = [
  { title: "Dukungan Arus Kas (TOP)", icon: Briefcase },
  { title: "Kepastian Harga Kontrak", icon: ShieldCheck }
];
---

<section id={id} class="py-6 md:py-24 bg-white font-sans overflow-hidden text-left reveal-container">
  <div class="max-w-[1800px] mx-auto bg-white md:border-2 md:border-green-100 md:rounded-[4rem] overflow-hidden shadow-2xl shadow-green-900/5">
    
    <div class="grid lg:grid-cols-12 items-stretch">
      
      <div class="lg:col-span-5 relative min-h-[300px] md:min-h-[450px] lg:min-h-full bg-[#052c17] flex flex-col justify-end p-6 md:p-16">
        <div class="absolute inset-0 z-0">
          <img 
            src={contactVisualUrl} 
            class="w-full h-full object-cover opacity-60" 
            alt="Produk CV Green Fresh Cipanas"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[#052c17] via-[#052c17]/30 to-transparent"></div>
        </div>

        <div class="relative z-10 space-y-6 md:space-y-8">
          <div class="space-y-4 md:space-y-6">
            <div class="flex items-center gap-3 reveal-left">
              <div class="p-1.5 md:p-2 bg-white/10 backdrop-blur-md rounded-lg text-[#bef264] border border-white/20">
                <Lock size={14} />
              </div>
              <span class="text-[9px] md:text-[10px] font-black uppercase tracking-[0.2em] text-green-400">B2B Partnership</span>
            </div>
            
            <h2 class="text-[clamp(1.85rem,6vw,4.5rem)] font-black text-white leading-[0.95] tracking-tighter uppercase reveal-up">
              Sistem Suplai <br /> 
              <span class="text-[#bef264] italic font-serif lowercase tracking-normal">Terintegrasi.</span>
            </h2>
            
            <p class="text-sm md:text-lg text-slate-200 font-medium leading-relaxed max-w-md border-l-2 md:border-l-4 border-[#bef264]/50 pl-4 md:pl-6 reveal-up">
              Fasilitasi pengadaan sayur Grade A untuk korporasi dengan dukungan legalitas lengkap.
            </p>
          </div>

          <div class="grid gap-3 md:gap-4 max-w-sm">
            {features.map((item) => (
              <div class="flex items-center gap-3 p-3 md:p-5 bg-white/5 backdrop-blur-xl rounded-xl border border-white/10 reveal-up">
                <div class="text-[#bef264]"><item.icon size={16} /></div>
                <h3 class="text-[9px] md:text-[11px] font-black uppercase tracking-widest text-white">{item.title}</h3>
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="lg:col-span-7 bg-[#fcfdfc] p-6 md:p-16 lg:p-24 relative">
        <div class="relative z-10 text-left">
          <div class="mb-8 md:mb-12">
            <h3 class="text-xl md:text-3xl font-black text-[#052c17] uppercase tracking-tighter">Inquiry Form</h3>
            <p class="text-[10px] text-slate-500 font-bold mt-1 tracking-wide uppercase">Respon Resmi dalam 1x24 Jam</p>
          </div>

          <form id="partnership-form" class="grid gap-5 md:gap-8">
            <div class="grid md:grid-cols-2 gap-5">
              <div class="space-y-2">
                <label for="company" class="text-[9px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Nama Perusahaan</label>
                <input 
                  id="company" name="company" type="text" required
                  class="w-full bg-white border-2 border-slate-100 rounded-xl px-4 py-4 text-sm font-bold text-[#052c17] focus:border-[#15803d] outline-none transition-all shadow-sm" 
                  placeholder="Hotel / Resto"
                />
              </div>
              <div class="space-y-2">
                <label for="volume" class="text-[9px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Volume per Hari</label>
                <input 
                  id="volume" name="volume" type="text" required
                  class="w-full bg-white border-2 border-slate-100 rounded-xl px-4 py-4 text-sm font-bold text-[#052c17] focus:border-[#15803d] outline-none transition-all shadow-sm" 
                  placeholder="Kg / Hari"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label for="termin" class="text-[9px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Termin Pembayaran (TOP)</label>
              <div class="relative">
                <select 
                  id="termin" name="termin" required
                  class="w-full bg-white border-2 border-slate-100 rounded-xl px-4 py-4 text-sm font-bold text-[#052c17] focus:border-[#15803d] outline-none transition-all appearance-none cursor-pointer shadow-sm"
                >
                  <option value="">Pilih Skema</option>
                  <option value="COD">Cash on Delivery</option>
                  <option value="TOP 14">14 Hari</option>
                  <option value="TOP 30">30 Hari</option>
                </select>
                <ChevronDown class="absolute right-4 top-1/2 -translate-y-1/2 text-[#15803d] pointer-events-none" size={18} />
              </div>
            </div>

            <button 
              type="submit"
              class="w-full bg-[#052c17] text-[#bef264] py-5 rounded-xl font-black uppercase text-[10px] tracking-[0.2em] hover:bg-[#15803d] transition-all shadow-xl flex items-center justify-center gap-3 mt-2 cursor-pointer"
            >
              KIRIM INQUIRY
              <Send size={16} />
            </button>

            <div class="flex items-center justify-center gap-2 opacity-50 mt-6">
              <CheckCircle2 size={12} class="text-[#15803d]" />
              <p class="text-[8px] font-black uppercase tracking-widest text-slate-500">Data Terenkripsi</p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .reveal-container .reveal-up,
  .reveal-container .reveal-left {
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .reveal-up { transform: translateY(20px); }
  .reveal-left { transform: translateX(-20px); }

  :global(.is-visible) .reveal-up,
  :global(.is-visible) .reveal-left {
    opacity: 1;
    transform: translate(0);
  }
</style>