---
/**
 * CITY HERO - ASTRO VERSION (Fluid Typography & Textural Depth)
 */
import { MapPin, ArrowRight, ShieldCheck, Truck } from 'lucide-react';

const { city } = Astro.props;
const cityName = city?.name || 'Seluruh Wilayah';
const seoContent = city?.seoContent || null;

const heroImageUrl = "https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&q=80&w=1200";
---

<section class="relative min-h-[85vh] lg:min-h-[90vh] flex items-center overflow-hidden font-sans bg-[#052c17] reveal-container">
  
  <div class="absolute inset-0 z-0">
    <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(21,128,61,0.2)_0%,transparent_70%)]"></div>
    <div class="absolute -top-24 -left-24 w-96 h-96 bg-[#bef264]/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="w-full max-w-[1920px] mx-auto relative z-10">
    <div class="flex flex-col lg:flex-row items-stretch">
      
      <div class="w-full lg:w-7/12 px-6 md:px-16 lg:px-20 py-12 lg:py-24 flex flex-col justify-center text-white">
        
        <div class="max-w-4xl space-y-8 lg:space-y-12">
          <div class="flex items-center gap-4 reveal-left">
            <div class="flex items-center gap-2 px-4 py-2 bg-white/5 border border-white/10 rounded-full backdrop-blur-md">
              <MapPin size={14} class="text-[#bef264]" />
              <span class="text-[10px] lg:text-[12px] font-black text-[#bef264] uppercase tracking-[0.2em]">{cityName} HUB</span>
            </div>
            <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-white/30 hidden sm:block">Grade A Specialist</span>
          </div>

          <div class="relative">
            <h1 class="text-[clamp(3.5rem,8vw,8.5rem)] font-black leading-[0.9] tracking-[-0.03em] uppercase reveal-up">
              Supplier <br />
              <span class="text-[#bef264] italic font-serif lowercase tracking-tight opacity-90">Sayur</span> 
              <span class="block">{cityName}.</span>
            </h1>
            <div class="w-24 h-2 bg-[#bef264] mt-6 rounded-full reveal-left" style="transition-delay: 0.4s;"></div>
          </div>

          <div class="relative reveal-up" style="transition-delay: 0.1s;">
            <p class="text-lg lg:text-2xl text-slate-300 font-medium leading-relaxed max-w-2xl border-l-4 border-[#bef264]/40 pl-6 lg:pl-10">
              Distribusi sayuran segar hasil panen <span class="text-white">Cipanas</span> untuk kebutuhan hotel, resto, dan katering di wilayah <span class="text-[#bef264]">{cityName}</span>.
            </p>
          </div>

          {seoContent && (
            <div class="max-w-2xl bg-gradient-to-r from-white/5 to-transparent p-6 rounded-3xl border-l border-white/10 backdrop-blur-sm reveal-up" style="transition-delay: 0.2s;">
              <p class="text-sm lg:text-base text-slate-400 leading-relaxed italic font-light">
                &quot;{seoContent}&quot;
              </p>
            </div>
          )}

          <div class="flex flex-wrap gap-4 lg:gap-6 pt-4 reveal-up" style="transition-delay: 0.3s;">
            <a href="#katalog" class="group relative overflow-hidden bg-[#bef264] text-[#052c17] px-10 py-6 rounded-2xl text-xs font-black uppercase tracking-widest transition-all hover:shadow-[0_0_40px_rgba(190,242,100,0.3)]">
              <span class="relative z-10 flex items-center gap-3">
                Cek Katalog Produk <ArrowRight size={18} class="group-hover:translate-x-2 transition-transform" />
              </span>
            </a>
            <a href="#kemitraan" class="group px-10 py-6 rounded-2xl text-xs font-black uppercase tracking-widest text-white border-2 border-white/10 hover:border-white hover:bg-white/5 transition-all">
              Hubungi Sales
            </a>
          </div>
        </div>
      </div>

      <div class="w-full lg:w-5/12 relative min-h-[450px] lg:min-h-0 flex items-center justify-center p-6 lg:p-12 reveal-scale">
        <div class="relative w-full h-full max-h-[700px] overflow-hidden rounded-[2.5rem] lg:rounded-[4rem] group shadow-2xl shadow-black/50">
          <img 
            src={heroImageUrl} 
            alt={`Supplier Sayur Segar Green Fresh Cipanas di ${cityName}`}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-[2s]"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[#052c17]/80 via-transparent to-transparent opacity-60"></div>
          
          <div class="absolute bottom-8 left-8 right-8">
            <div class="bg-white/10 backdrop-blur-xl border border-white/20 p-6 rounded-3xl">
              <div class="flex items-center gap-5">
                <div class="p-3 bg-[#bef264] rounded-2xl text-[#052c17]">
                  <ShieldCheck size={24} />
                </div>
                <div class="space-y-1">
                  <p class="text-[9px] font-black text-[#bef264] uppercase tracking-widest">Quality Verified</p>
                  <p class="text-sm lg:text-base font-bold text-white">Standar Operasional Horeka</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* Mengatur Fluid Typography secara manual jika browser tidak support clamp */
  h1 {
    word-break: break-word;
  }

  /* Animasi */
  .reveal-up, .reveal-left, .reveal-scale {
    opacity: 1;
    transform: none;
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (prefers-reduced-motion: no-preference) {
    :global(.js-enabled) .reveal-up { opacity: 0; transform: translateY(50px); }
    :global(.js-enabled) .reveal-left { opacity: 0; transform: translateX(-50px); }
    :global(.js-enabled) .reveal-scale { opacity: 0; transform: scale(0.9); }
  }

  :global(.is-visible) .reveal-up,
  :global(.is-visible) .reveal-left,
  :global(.is-visible).reveal-up,
  :global(.is-visible).reveal-left {
    opacity: 1 !important;
    transform: translate(0) !important;
  }
  :global(.is-visible) .reveal-scale,
  :global(.is-visible).reveal-scale {
    opacity: 1 !important;
    transform: scale(1) !important;
  }
</style>