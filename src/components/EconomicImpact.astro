---
/**
 * ECONOMIC IMPACT COMPONENT - ASTRO VERSION
 * Perbaikan: Menghilangkan risiko "blank putih" dengan CSS Fallback.
 */
import { HeartHandshake, TrendingUp, ShieldCheck, Zap } from 'lucide-react';
import productsData from '@/data/products.json';

const { id } = Astro.props;

/** * Pengambilan gambar langsung di server (Build time) 
 */
const IMPACT_IMAGE_SOURCE = productsData.find(p => p.name === "Pakcoy")?.image || productsData[0]?.image;

const advantages = [
  { 
    icon: TrendingUp, 
    title: "Optimasi Biaya", 
    desc: "Eliminasi perantara ganda untuk memberikan harga yang stabil bagi operasional Anda." 
  },
  { 
    icon: ShieldCheck, 
    title: "Jaminan Stok", 
    desc: "Kemitraan terintegrasi dengan klaster petani menjamin kontinuitas pasokan harian." 
  }
];
---

<section id={id} class="py-0 lg:py-24 bg-white font-sans overflow-hidden border-b-2 border-green-100 reveal-container">
  <div class="max-w-[1800px] mx-auto px-0 md:px-12 lg:px-20 relative z-10">
    <div class="grid lg:grid-cols-12 gap-0 lg:gap-24 items-center">
      
      {/* SISI VISUAL (ATAS PADA MOBILE) */}
      <div class="lg:col-span-6 order-1 lg:order-2">
        <div class="relative reveal-fade">
          {/* IMAGE */}
          <div class="relative rounded-none md:rounded-[3rem] lg:rounded-[4rem] overflow-hidden md:border-2 md:border-green-100 shadow-none md:shadow-2xl aspect-[4/5] lg:aspect-square bg-slate-100 group">
            <img 
              src={IMPACT_IMAGE_SOURCE} 
              class="w-full h-full object-cover grayscale-[0.2] group-hover:grayscale-0 transition-all duration-1000 group-hover:scale-105" 
              alt="Pertanian Berkelanjutan Cipanas - Pakcoy" 
              loading="lazy"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-green-900/40 via-transparent to-transparent opacity-60" aria-hidden="true"></div>
          </div>

          {/* Floating Badge */}
          <div class="absolute -bottom-6 left-4 right-4 md:left-[-3rem] md:right-auto bg-white p-6 md:p-8 rounded-[2rem] md:rounded-[2.5rem] shadow-2xl border-2 border-green-100 md:max-w-[320px] z-20 text-left reveal-up" style="transition-delay: 0.3s;">
            <div class="flex items-center gap-3 mb-3 text-[#15803d]">
              <HeartHandshake size={18} />
              <span class="text-[9px] font-black uppercase tracking-[0.3em]">Ethical Sourcing</span>
            </div>
            <p class="text-lg md:text-2xl font-serif italic text-[#052c17] leading-tight font-black">
              "Membangun <span class="text-[#15803d] not-italic font-sans">ekonomi lokal</span> melalui rantai pasok transparan."
            </p>
          </div>
        </div>
      </div>

      {/* SISI KONTEN TEKS */}
      <div class="lg:col-span-6 space-y-10 order-2 lg:order-1 px-5 md:px-0 pt-16 md:pt-0 pb-12 md:pb-0">
        <div class="space-y-6 text-left">
          <div class="flex items-center gap-3 reveal-up">
            <div class="p-2 bg-green-50 rounded-lg text-[#15803d] border border-green-200 shadow-sm">
              <Zap size={16} class="fill-[#15803d]/20" />
            </div>
            <span class="text-[10px] font-black uppercase tracking-[0.4em] text-[#15803d]">Direct Farming Model</span>
          </div>
          
          <h2 class="text-3xl md:text-6xl lg:text-7xl font-serif italic font-black text-[#052c17] leading-[1.1] tracking-tighter uppercase reveal-up" style="transition-delay: 0.1s;">
            Akses Langsung, <br /> 
            <span class="text-[#15803d] not-italic font-sans">Efisiensi Maksimal.</span>
          </h2>
          
          <p class="text-base md:text-2xl text-slate-600 font-medium leading-relaxed max-w-2xl border-l-4 border-green-500/30 pl-5 md:pl-10 reveal-up" style="transition-delay: 0.2s;">
            Kami memutus kompleksitas rantai pasok konvensional. Menjamin margin harga kompetitif bagi bisnis Anda tanpa mengabaikan kesejahteraan petani lokal.
          </p>
        </div>

        {/* ADVANTAGE CARDS */}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
          {advantages.map((item, i) => (
            <div 
              class="p-6 bg-[#f7faf7] rounded-[1.5rem] md:rounded-[2rem] border-2 border-green-100 group hover:bg-white transition-all duration-500 shadow-sm text-left reveal-up"
              style={`transition-delay: ${0.4 + (i * 0.1)}s;`}
            >
              <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-[#15803d] border border-green-200 mb-4 group-hover:bg-[#15803d] group-hover:text-white transition-all shadow-sm">
                <item.icon size={20} />
              </div>
              <h4 class="font-black text-[10px] md:text-[11px] text-[#052c17] uppercase tracking-widest mb-2">{item.title}</h4>
              <p class="text-sm text-slate-700 leading-relaxed font-semibold">
                {item.desc}
              </p>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* 1. STATE AWAL: Muncul secara default */
  .reveal-up, .reveal-fade {
    opacity: 1;
    transform: none;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* 2. STATE ANIMASI: Sembunyikan hanya jika JS Aktif */
  @media (prefers-reduced-motion: no-preference) {
    :global(.js-enabled) .reveal-up { opacity: 0; transform: translateY(30px); }
    :global(.js-enabled) .reveal-fade { opacity: 0; transform: scale(0.98); }
  }

  /* 3. STATE AKTIF */
  :global(.is-visible) .reveal-up,
  :global(.is-visible).reveal-up {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }
  :global(.is-visible) .reveal-fade,
  :global(.is-visible).reveal-fade {
    opacity: 1 !important;
    transform: scale(1) !important;
  }
</style>

<script>
  // Aktifkan mode JS
  document.documentElement.classList.add('js-enabled');

  const setupImpactObserver = () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { 
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px' 
    });

    // Amati semua elemen yang memiliki class reveal
    document.querySelectorAll('.reveal-up, .reveal-fade').forEach(el => observer.observe(el));
  };

  setupImpactObserver();
  document.addEventListener('astro:after-swap', setupImpactObserver);
</script>