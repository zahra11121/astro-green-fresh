---
/**
 * MAPS SECTION - ASTRO VERSION
 * Strategi: Zero Hydration untuk Local SEO Power.
 * Memastikan alamat fisik gudang terindeks sempurna.
 */
import { MapPin, ArrowUpRight, Navigation } from 'lucide-react';

const { id = "lokasi" } = Astro.props;

// Query pencarian langsung menggunakan nama brand
const searchQuery = "CV+Green+Fresh+Cipanas";

// URL untuk navigasi langsung
const directLink = `https://www.google.com/maps/search/?api=1&query=${searchQuery}`;

// URL Iframe Maps (Menggunakan embed standar tanpa API Key untuk stabilitas)
const fallbackMapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3962.24744415516!2d107.0315!3d-6.7336!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwNDQnMDEuMCJTIDEwN8KwMDEnNTMuNCJF!5e0!3m2!1sid!2sid!4v1700000000000!5m2!1sid!2sid";
---

<section id={id} class="py-24 lg:py-32 bg-white overflow-hidden font-sans border-b-2 border-green-100 text-left reveal-container">
  <div class="max-w-[1400px] mx-auto px-6 lg:px-20">
    
    <div class="grid lg:grid-cols-12 gap-16 items-center">
      
      <div class="lg:col-span-5 space-y-10">
        <div class="space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-2 bg-green-50 border border-green-100 rounded-full text-[#15803d] text-[10px] font-black uppercase tracking-[0.3em] reveal-left">
            <Navigation size={14} class="animate-pulse" /> Titik Distribusi Utama
          </div>
          
          <h2 class="text-5xl lg:text-6xl font-serif italic font-black text-[#052c17] leading-[1.1] tracking-tighter uppercase reveal-up">
            Kantor & <br /> <span class="text-[#15803d] not-italic font-sans font-bold">Gudang Kami.</span>
          </h2>
          
          <p class="text-lg text-slate-700 font-normal leading-relaxed reveal-up" style="transition-delay: 0.1s;">
            Segala operasional sortasi dan pengemasan dilakukan secara terpusat di hub Cipanas untuk menjaga standar mutu <strong>CV Green Fresh Cipanas</strong> sebelum dikirim ke seluruh wilayah Jabodetabek.
          </p>
        </div>

        <div class="space-y-8">
          <div class="group flex gap-6 p-8 bg-slate-50 rounded-[2rem] border border-slate-200 hover:border-green-300 hover:bg-white transition-all duration-500 shadow-sm reveal-up" style="transition-delay: 0.2s;">
            <div class="w-14 h-14 bg-white rounded-2xl flex items-center justify-center text-[#15803d] shadow-sm group-hover:bg-[#15803d] group-hover:text-white transition-all border border-slate-100 shrink-0">
              <MapPin size={28} />
            </div>
            <div class="flex-1 text-left">
              <h4 class="text-[10px] font-[1000] uppercase tracking-widest text-slate-400 mb-2">CV Green Fresh Cipanas</h4>
              <p class="text-[#052c17] font-bold text-lg leading-snug">
                Kp. Kayumanis, RT.04/RW.04, Desa Sukatani, Kec. Cipanas, Kab. Cianjur, Jawa Barat 43253.
              </p>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row items-center gap-6 reveal-up" style="transition-delay: 0.3s;">
            <a 
              href={directLink} 
              target="_blank"
              rel="noopener noreferrer"
              class="w-full sm:w-auto flex items-center justify-center gap-4 bg-[#052c17] text-[#bef264] px-10 py-5 rounded-2xl font-black text-[11px] uppercase tracking-widest hover:bg-[#15803d] hover:text-white transition-all group shadow-xl shadow-green-900/10 cursor-pointer"
            >
              Navigasi Google Maps
              <ArrowUpRight size={18} class="group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
            </a>
          </div>
        </div>
      </div>

      <div class="lg:col-span-7 relative">
        <div class="relative rounded-[3rem] lg:rounded-[4rem] overflow-hidden shadow-2xl aspect-square lg:aspect-video lg:h-[650px] border-[12px] border-slate-50 bg-slate-100 reveal-scale">
          <iframe 
            src={fallbackMapUrl}
            width="100%" 
            height="100%" 
            style="border: 0;" 
            allowfullscreen="true" 
            title="Google Maps CV Green Fresh Cipanas"
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-full object-cover"
          ></iframe>

          <div class="absolute top-8 left-8 bg-[#052c17] text-white px-6 py-4 rounded-2xl shadow-2xl flex items-center gap-3 z-20 border border-white/10">
            <div class="w-2.5 h-2.5 bg-[#bef264] rounded-full animate-pulse"></div>
            <div>
              <p class="text-[8px] font-black uppercase tracking-[0.2em] text-green-400 leading-none mb-1">Official Hub</p>
              <p class="text-[10px] font-black uppercase tracking-widest">CV Green Fresh Cipanas</p>
            </div>
          </div>
        </div>

        <div class="absolute -bottom-8 -left-8 w-52 h-52 rounded-[2.5rem] overflow-hidden border-8 border-white shadow-2xl hidden xl:block z-30 reveal-up" style="transition-delay: 0.5s;">
          <img 
            src="https://images.unsplash.com/photo-1540420773420-3366772f4999?auto=format&fit=crop&q=80&w=400" 
            alt="Produk Sayur Segar Cipanas" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* Animasi CSS Murni (SEO Friendly) */
  .reveal-container .reveal-up,
  .reveal-container .reveal-left,
  .reveal-container .reveal-scale {
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-up { transform: translateY(30px); }
  .reveal-left { transform: translateX(-30px); }
  .reveal-scale { transform: scale(0.98); }

  :global(.is-visible) .reveal-up,
  :global(.is-visible) .reveal-left {
    opacity: 1;
    transform: translate(0);
  }
  :global(.is-visible) .reveal-scale {
    opacity: 1;
    transform: scale(1);
  }
</style>

<script>
  /**
   * Intersection Observer ringan untuk memicu animasi visual.
   * Teks alamat tetap terbaca bot sejak awal karena bersifat statis.
   */
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal-container').forEach(el => observer.observe(el));
</script>