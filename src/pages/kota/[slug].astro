---
// 1. Aktifkan Prerender agar menjadi halaman statis (SSG) - Solusi Utama Indexing
export const prerender = true;

import MainLayout from '@/layouts/MainLayout.astro';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import CityClientPage from '@/components/CityClientPage.jsx';

import { jabodetabekCities } from '@/data/cities';
import { ChevronRight, Home, MapPin, Truck, ShieldCheck, CheckCircle2 } from 'lucide-react';

// 2. Wajib ada untuk export const prerender = true
export async function getStaticPaths() {
  return jabodetabekCities.map((city) => ({
    params: { slug: city.slug },
    props: { city },
  }));
}

const { city } = Astro.props;

// Meta & Schema Logic
const title = `Supplier Sayur ${city.name} - CV Green Fresh Cipanas`;
const description = `Layanan supply sayuran grade A harian khusus Hotel, Restoran, dan Cafe di wilayah ${city.name}. Distribusi segar langsung dari petani.`;

const origin = Astro.site || Astro.url.origin;
const cleanPathname = Astro.url.pathname.replace(/\/index\.html$|\.html$/, '');
const canonicalURL = new URL(cleanPathname, origin);

// Logic Data Terstruktur (Schema.org) - PERBAIKAN ERROR ADDRESS
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `Supplier Sayur Segar ${city.name}`,
  "description": description,
  "areaServed": {
    "@type": "City",
    "name": city.name
  },
  "provider": {
    "@type": "LocalBusiness",
    "name": "CV Green Fresh Cipanas",
    "image": "https://images.unsplash.com/photo-1540420773420-3366772f4999?auto=format&fit=crop&q=80&w=2000",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Kp. Kayumanis, RT.04/RW.04, Desa Sukatani, Kec. Cipanas",
      "addressLocality": "Cianjur",
      "addressRegion": "Jawa Barat",
      "postalCode": "43253",
      "addressCountry": "ID"
    },
    "telephone": "+628123456789", // Ganti dengan nomor asli jika ada
    "priceRange": "$$"
  }
};

// Logic Internal Link
const currentIndex = jabodetabekCities.findIndex(c => c.slug === city.slug);
const otherCities = [];
const totalDisplay = 6;
for (let i = 1; i <= totalDisplay; i++) {
  const nextIndex = (currentIndex + i) % jabodetabekCities.length;
  otherCities.push(jabodetabekCities[nextIndex]);
}

const labelVariations = ["Distribusi", "Supply Sayur", "Pengiriman", "Area Layanan", "Logistik", "Mitra"];
const heroImageUrl = "https://images.unsplash.com/photo-1540420773420-3366772f4999?auto=format&fit=crop&q=80&w=2000";
---

<MainLayout title={title} description={description}>
  <link rel="canonical" href={canonicalURL.href} slot="head" />
  
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(jsonLd)} />

  <div class="bg-white text-[#052c17] font-sans antialiased selection:bg-green-100 overflow-x-hidden text-left">
    <Header client:load />
    
    <main>
      <section class="relative h-[50vh] min-h-[450px] flex items-center overflow-hidden bg-[#052c17]">
        <div class="absolute inset-0 z-0">
          <img 
            src={heroImageUrl} 
            alt={`Supplier Sayur Segar ${city.name}`} 
            class="w-full h-full object-cover opacity-60 brightness-[0.7]"
            loading="eager"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[#052c17] via-transparent to-transparent"></div>
        </div>
        
        <div class="relative z-10 max-w-[1800px] mx-auto px-6 w-full text-white text-left">
          <div class="max-w-4xl">
            <span class="px-3 py-1 bg-green-600 text-[10px] font-black tracking-[0.2em] uppercase rounded mb-4 inline-block">
              B2B Premium Supply
            </span>
            <h1 class="text-4xl md:text-7xl font-black uppercase leading-[0.95] mb-6 tracking-tighter">
              Fresh Produce <br/> <span class="text-green-400">Supplier {city.name}</span>
            </h1>
          </div>
        </div>
      </section>

      <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto px-6">
          <article class="prose prose-green max-w-none">
            <h2 class="text-3xl font-black uppercase tracking-tighter mb-6">
              Mitra Distribusi Sayuran Terpercaya di {city.name}
            </h2>
            <p class="text-lg leading-relaxed text-slate-700 mb-6">
              CV Green Fresh Cipanas kini hadir sebagai <strong>supplier sayur {city.name}</strong> utama untuk kebutuhan bisnis Horeca (Hotel, Restaurant, Cafe). Kami memahami bahwa stabilitas pasokan dan kualitas bahan baku adalah kunci keberhasilan dapur profesional Anda di wilayah {city.name}.
            </p>
            
            <div class="grid md:grid-cols-2 gap-8 my-10">
              <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                <h3 class="font-bold text-green-800 mb-3 flex items-center gap-2">
                  <CheckCircle2 size={18}/> Kualitas Grade A
                </h3>
                <p class="text-sm text-slate-600">Penyortiran ketat standar hotel bintang 5 untuk memastikan setiap item yang sampai di {city.name} dalam kondisi prima.</p>
              </div>
              <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                <h3 class="font-bold text-green-800 mb-3 flex items-center gap-2">
                  <CheckCircle2 size={18}/> Pengiriman Tepat Waktu
                </h3>
                <p class="text-sm text-slate-600">Armada logistik kami menjangkau seluruh area {city.name} setiap pagi untuk menjamin kesegaran sayur harian.</p>
              </div>
            </div>
          </article>
        </div>
      </section>

      <CityClientPage
        city={city}
        client:visible
      />

      <section class="py-20 bg-slate-50 border-t border-green-50">
        <div class="max-w-[1800px] mx-auto px-6">
          <div class="text-left mb-12">
            <h3 class="text-xs font-black text-[#166534] mb-2 uppercase tracking-[0.4em] flex items-center gap-3">
              <MapPin size={14} /> Jangkauan Kami
            </h3>
            <h2 class="text-3xl font-black uppercase tracking-tighter text-[#052c17]">
              Area Layanan Lain di Sekitar {city.name}
            </h2>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            {otherCities.map((otherCity, index) => (
              <a
                href={`/kota/${otherCity.slug}`}
                class="group p-6 rounded-2xl border border-green-100 bg-white hover:border-[#166534] hover:bg-green-50 transition-all duration-500 flex flex-col items-center justify-center gap-2 text-center"
              >
                <span class="text-[9px] font-bold text-slate-400 group-hover:text-green-600 uppercase tracking-[0.2em]">
                  {labelVariations[index % labelVariations.length]}
                </span>
                <span class="text-xs font-[1000] text-slate-900 group-hover:text-[#166534] uppercase tracking-wider block">
                  {otherCity.name}
                </span>
              </a>
            ))}
          </div>
        </div>
      </section>
    </main>

    <Footer client:visible />
  </div>
</MainLayout>