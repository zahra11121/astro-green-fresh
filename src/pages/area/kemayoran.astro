    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Beranda", "item": baseUrl },
        { "@type": "ListItem", "position": 2, "name": "Area", "item": `${baseUrl}/area` },
        { "@type": "ListItem", "position": 3, "name": district.name, "item": currentUrl }
      ]
    }
  ]
