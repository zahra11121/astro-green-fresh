const district = {
  "slug": "kemayoran",
  "name": "Kemayoran",
  "origin": "CV Green Fresh Cipanas",
  "title": "Supplier Sayur Kemayoran - Untuk Restoran Convention, Cafe Exhibition, Catering Event dan Bisnis Pameran",
  "angle": "Pemasok sayuran untuk kawasan convention dan exhibition center",
